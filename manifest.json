{
  "manifest_version": 3,
  "name": "Global Sticky Notes",
  "version": "1.0",
  "description": "Create and manage sticky notes across all tabs.",
  "permissions": ["storage", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_title": "Add a new sticky note"
  }
}
